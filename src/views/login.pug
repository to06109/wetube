extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=6f05ce699e8b76665128&allow_signup=false") Continue with Github &rarr
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create now &rarr